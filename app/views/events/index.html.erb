<div class="jumbotron">
  <div class="container">
    <h1>Voici les prochains évènements</h1>
  </div>
</div>

 <div class="row justify-content-center">
    <% @events.each do |event| %>
      <div class="card m-3" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <p class="card-location"><%= event.location %></p>
          <%= link_to "Détails de l'événement", event_path(event.id), :class => "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
