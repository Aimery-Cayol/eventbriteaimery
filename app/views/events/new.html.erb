<div class="container my-5">
  <%= render  "events/shared/alert" %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card my-5">
    <div class="p-4">
      <h1>Créer votre évènement</h1>
    </div>
    <div class="p-4">
    
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <%= text_field_tag 'title', @event.title, class: "form-control", placeholder: "Titre" %><br>
      <%= text_area_tag 'description', @event.description, class: "form-control", placeholder: "Description"%><br>
      <%= date_field_tag 'start_date', @event.start_date, class: "form-control", placeholder: "Date du début"%><br>
      <%= text_field_tag 'duration', @event.duration, class: "form-control", placeholder: "Durée"%><br>
      <%= text_field_tag 'price', @event.price, class: "form-control", placeholder: "Prix"%><br>
      <%= text_field_tag 'location', @event.location, class: "form-control", placeholder: "Lieu"%><br>
      <%= submit_tag "Nouvel Event",  class: "btn btn-primary" %>
    <% end %>
    
    
